<div class="control-group">
    <div class="collapse in responsive-form-container" id="collapseprocessinfo">
        <div class="row-fluid">

            <div class="col-sm-6" style="display: inline;float: left;">
                <form class="form-horizontal font" style="padding-top: 80px; padding-left: 50px">
                        <div class="form-group">

                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Process name<sup
                                    class="required-field">*</sup></label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input onblur="blurIt()" type="text" placeholder="Enter Process Name"
                                       name="overview_name"
                                       id="pName" class="form-control" required=""
                                    {{#if isUpdateView}}value="{{assets.tables.[0].fields.name.value}}"
                                       disabled {{/if}}>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Version<sup
                                    class="required-field">*</sup></label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input onblur="blurIt()" type="text" placeholder="1.0.0" name="overview_version"
                                       id="pVersion" class="form-control" required=""
                                    {{#if isUpdateView}}value="{{assets.tables.[0].fields.version.value}}"
                                       disabled {{/if}}>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Created by<sup
                                    class="required-field">*</sup></label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input onblur="blurIt()" type="text" placeholder="Enter Process Owner"
                                       name="overview_owner" disabled="disabled"
                                       id="pOwner" class="form-control" required="" value="{{cuser.username}}">
                            </div>
                        </div>

                         <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Process owner</label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input onblur="blurIt()" type="text" placeholder="Enter Process User"
                                   name="process_user"
                                   id="pUser" class="form-control" required="" value="{{#if isUpdateView}}{{assets.tables.[0].fields.businessuser.value}}{{else}}{{cuser.username}}{{/if}}">
                            </div>
                        </div>

                          <div class="form-group">
                              <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Process owner email</label>
                              <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input onblur="blurIt()" type="text" placeholder="Enter Process User email"
                                   name="process_user_email"
                                   id="pUserEmail" class="form-control" required="" value="{{#if isUpdateView}}{{assets.tables.[0].fields.businessuseremail.value}}{{else}}{{cuser.username}}{{/if}}">
                              </div>
                         </div>

                        <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Description</label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                    <textarea placeholder="Process Description" row="3" name="overview_description"
                              id="overview_description"
                              class="input-large">{{#if isUpdateView}}{{assets.tables.[0].fields.description.value}}{{/if}}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Tags</label>

                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input type="text" id="tag-box" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="custom-form-label col-lg-2 col-md-2 col-sm-12 col-xs-12">Image</label>
                            <div class="custom-form-right col-lg-10 col-md-8 col-sm-8 col-xs-12">
                                <input type="file" class="filestyle form-control" value="" name="images_thumbnail"
                                       id="images_thumbnail"
                                       onchange="readImage(this);" data-buttonText="Browse">
                                <input type="hidden" id="processImage" name="processImage" value=""/>
                            </div>
                        </div>

                </form>

                <div id="processButtons" class="form-actions">
                    <div class="form-group">
                        <div id="processButtonDiv" class="col-sm-offset-1 col-sm-10">
                            <button class="btn btn-primary" id="saveProcessBtn" value="Save process"
                                    onclick="{{#if isUpdateView}}updateProcess(this){{else}} saveProcess(this){{/if}}">
                                Save
                            </button>
                            &nbsp;
                            <button class="btn btn-primary" id="detailsProcessBtn" value="Process Details"
                                    onclick="{{#if isUpdateView}}updateProcess(this){{else}} saveProcess(this){{/if}}"
                                    style="top: 0px">
                                Details&nbsp;&nbsp;<span class="glyphicon glyphicon-circle-arrow-right"></span>
                            </button>
                        </div>
                    </div>
                </div>
        </div>

            <div id="process-thumbnail-div" class="col-sm-2 well well-sm" style="display: inline;float: left;margin-left: 30px; margin-top: 80px;">
                {{#if isUpdateView}}
                    {{#if customThumbnailAvailable}}
                        <img id="image" alt="thumbnail" class="square-element img-thumbnail"
                             src="/designer/storage/process/{{assets.id}}/images_thumbnail"
                             style="display:{{#if customThumbnailAvailable}}block{{else}} none{{/if}}">
                    {{else}}
                        <div class="ast-img setbgcolor" style="background: {{assets.uniqueColor}};width: 100%;" title="{{name}}">
                                    <span class="ast-type-icon" title="{{assets.singularLabel}}">
                                      <i class="{{assets.icon}} fw-lg"></i>
                                    </span>
                            <div class="ast-name-icon" style="max-width: 100%;max-height: 100%">{{assets.nameToChar}}</div>
                        </div>
                    {{/if}}
                {{else}}
                    <img id="image" alt="thumbnail" class="square-element img-thumbnail"
                         src="#"
                         style="display:{{#if customThumbnailAvailable}}block{{else}} none{{/if}}">
                {{/if}}
            </div>
        </div>
    </div>

</div>


