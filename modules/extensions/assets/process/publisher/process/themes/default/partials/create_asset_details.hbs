<div class="form-group" xmlns="http://www.w3.org/1999/html">
    <!--<div class="title">-->
        <!--<div class="input-group">-->
            <!--Details:-->
            <!--<label id="processName"></label>_-->
            <!--<label id="processVersion"></label>-->
        <!--</div>-->
    <!--</div>-->
    <!--<div class="horizontal_line"></div>-->
    <div class="sidebar-wrapper" id="left-sidebar" data-side="left" data-width="100"
         data-fixed-offset-top="0" data-offset-top="80">
        <div id="content">
            <ul class="nav nav-list">
                <!--<li class="nav-header">Process Artifacts</li>-->
                <li id="textEditor"><a href="#" id="textEditorLink"
                                       onclick="showTextEditor(this)">Process Text<i id="textadded"
                                                                                     class="artifact-check" 
                                                                                     style="margin-left: 35px"></i></a>
                </li>
                <li id="bpmn"><a href="#" onclick="associateBPMN(this)">BPMN
                    Model<i id="bpmnadded" class="artifact-check" style="margin-left: 35px"></i></a></li>
                <li id="flowChart"><a href="#"
                                      onclick="{{#if isUpdateView}}editAssociatedFlowChart(this,'{{flowchartPath}}') {{else}}associateFlowChart(this){{/if}}">Flow
                    Chart<i id="flowchartadded" class="artifact-check"></i></a></li>
                <li id="doc"><a href="#" onclick="associateDocument(this,{{permission}})">Documents<i id="docadded"
                                                                                                      class="artifact-check" style="margin-left: 35px"></i></a>
                </li>
            </ul>
            <input type="hidden" id="updateViewCheck" value="{{isUpdateView}}">
            <input type="hidden" id="processTextHolder" name="processTextHolder" value="{{isProcessTextAvailable}}"/>
            <input type="hidden" id="bpmnAvailableCheck" value="{{isBpmnAvailable}}">
            <input type="hidden" id="documentAvailableCheck" value="{{isDocumentAvailable}}">
            <input type="hidden" id="flowchartAvailableCheck" value="{{isFlowChartAvailable}}">
            <input type="hidden" id="permissionCheck" value="{{permission}}">
        </div>

        <div class="row" style="padding-top: 10%">
            <button class="btn btn-primary" id="backToOverviewBtn"
                    onclick="loadOverviewStep()" style="margin-left:30px; position: relative;">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp; Overview
            </button>

            <button class="btn btn-primary" id="associationBtn" value="Associations"
                    onclick="processAssociations(this)" style="margin-left: 5px; position: relative;">
                Associations&nbsp;&nbsp;<span class="glyphicon glyphicon-circle-arrow-right"></span>
            </button>
        </div>
    </div>

    <div class="vertical_line"></div>
    <div class="container">
        <div> {{> add_process_text .}}</div>
        <div> {{> add_bpmn .}}</div>
        <div> {{> add_doc .}}</div>
        <div> {{> add_flowchart .}}</div>
        <div> {{> processTextView .}}</div>
        <div> {{> bpmnView .}}</div>
        <div> {{> docView .}}</div>
    </div>
</div>