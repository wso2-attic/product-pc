<div id="predecessorDiv" class="responsive-form-container"
     style="">
    <!--<div class="col-lg-2 col-md-2 col-sm-12 col-xs-12" style="padding:0">-->
        <!--&nbsp;-->
    <!--</div>-->
    <div style="border:0px solid #ff0000; padding:0"
         class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <div class="add-unbounded-row">
            <a data-name="predecessor" onclick="addUnboundedRow(this)"><i
                    class="fa fa-plus-circle"></i> Add
                Predecessor</a>
            <button class="btn btn-primary" id="search-process"
                    onclick="showSearchModal('predecessor')">
                <i class="fa fa-search"></i> Search Process
            </button>
        </div>
        <table class="tablex cu-data-table js-unbounded-table" id="table_predecessor">
            <thead>
            <tr>
                <th style="background: none;"></th>
            </tr>
            </thead>
        </table>
    </div>

    <div id="predecessorViewDiv" style="">
        <div class="row-fluid">
            <div class="span12">
                <input type="hidden" id="predecessorCountHolder" value="{{involveProcessList.predecessors.length}}">
                <table class="table table-bordered" id="predecessorTable">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody id="listPredecessors">
                    {{#each involveProcessList.predecessors}}
                        <tr>
                            <td valign="top" style="width: 30%;"><span id="predecessor_Name"
                                                                       class="predecessor_Name">{{this.name}}-{{this.version}}</span></td>
                            <td style="width: 60%;"></td>
                            <td style="width: 10%;"><a target="_blank" href="../details/{{this.id}}" class="fa fa-eye" aria-hidden="true"></a><label class="remove-process" onclick="deletePredecessor(this)"><i
                                    class="fa fa-trash"></i></label></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<table style="display: none;" class="refernceTableForUnbounded">
    <tbody>
    <tr id="table_reference_predecessor">
        <td valign="top"><input type="text" class="form-control predecessor_Name" value=""
                                name="predecessor_Name"
                                id="predecessor_Name" onkeydown="predecessorNameAutoComplete()">
        </td>
        <td style="width: 5%;"><span class="glyphicon glyphicon-ok" style="color:#0081c2;cursor: pointer;"
                                     onclick="readUpdatedPredecessor(this, 1)"></span></td>
        <td><label data-name="predecessor" class="remove-process" onclick="deleteProcess(this)"><i
                class="fa fa-trash"></i></label></td>
    </tr>
    </tbody>
</table>
</div>