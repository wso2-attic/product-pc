<div class="control-group">
    <div class="collapse in responsive-form-container" id="collapseprocessinfo">
        <form class="form-horizontal font" style="padding-top: 50px; padding-left: 50px">
            <div class="form-group">

                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Process name<sup
                        class="required-field">*</sup></label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                    <input onblur="blurIt()" type="text" placeholder="Enter Process Name" name="overview_name"
                           id="pName" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Version<sup
                        class="required-field">*</sup></label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                    <input onblur="blurIt()" type="text" placeholder="1.0.0" name="overview_version"
                           id="pVersion" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Owner<sup
                        class="required-field">*</sup></label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                    <input onblur="blurIt()" type="text" placeholder="Enter Process Owner" name="overview_owner"
                           id="pOwner" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Description</label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                        <textarea placeholder="Process Description" row="3" style="width:100%; height:70px"  name="overview_description"
                                  id="overview_description" class="input-large"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Tags</label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                    <input type="text" id="tagbox" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <label class="custom-form-label col-lg-1 col-md-2 col-sm-12 col-xs-12">Image</label>

                <div class="custom-form-right col-lg-5 col-md-8 col-sm-8 col-xs-12">
                    <input type="file" class="form-control" value="" name="images_thumbnail" id="images_thumbnail"
                           onchange="readImage(this);">
                    <input type="hidden" id="processImage" name="processImage" value=""/>
                </div>
            </div>
        </form>
    </div>
    <div id="processButtons" class="form-actions">
        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
                <button class="btn btn-success" id="saveProcessBtn" value="Save process" onclick="saveProcess(this)">
                    Save
                </button> &nbsp;
                <button class="btn btn-success" id="detailsProcessBtn" value="Process Details"
                        onclick="saveProcess(this)">
                    Details
                </button>
            </div>
        </div>
    </div>
</div>


