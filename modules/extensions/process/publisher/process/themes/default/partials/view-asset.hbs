    function loadPdf() {
        var ppath = 'apis/get_process_pdf?process_pdf_path=/_system/governance/pdf/{{assets.tables.[0].fields.name.value}}/{{assets.tables.[0].fields.version.value}}';

        $.ajax({
            url: 'https://localhost:9443/publisher/assets/process/apis/get_process_pdf?process_pdf_path=/_system/governance/pdf/{{assets.tables.[0].fields.name.value}}/{{assets.tables.[0].fields.version.value}}',
            type: 'GET',
            dataType: 'text',
            success: function (data) {
                //renderPDF(base64ToUint8Array(data), document.getElementById("holder"));
                renderPDF(base64ToUint8Array(data));

            },
            error: function () {
                alertify.error('pdf retrieving error');
            }
        });
    }

    var pdfDoc = null;
    var pageNum ;
    scale = 1.5;
    canvas = document.getElementById('the-canvas');
    var ctx;
    //
    // Go to previous page
    //
    function goPrevious() {
        if (pageNum <= 1)
            return;
        pageNum--;
        renderPage(pageNum);
    }

    //
    // Go to next page
    //
    function goNext() {
        if (pageNum >= pdfDoc.numPages)
            return;
        pageNum++;
        renderPage(pageNum);
    }


    function renderPDF(url) {

        pdfDoc = null;
        pageNum = 1;
        scale = 1.5;
        canvas = document.getElementById('the-canvas');
        ctx = canvas.getContext('2d');
        PDFJS.disableWorker = true;

        PDFJS.getDocument(url).then(function getPdf(_pdfDoc) {
            pdfDoc = _pdfDoc;
            renderPage(pageNum);

        });
    }

    // Get page info from document, resize canvas accordingly, and render page

    function renderPage(num) {
        // Using promise to fetch the page
        pdfDoc.getPage(num).then(function(page) {
            var viewport = page.getViewport(scale);
            canvas.height = viewport.height;
            canvas.width = viewport.width;

            // Render PDF page into canvas context
            var renderContext = {
                canvasContext: ctx,
                viewport: viewport
            };
            page.render(renderContext);
        });

        // Update page counters
        document.getElementById('page_num').textContent = pageNum;
        document.getElementById('page_count').textContent = pdfDoc.numPages;
    }
    // }

    function base64ToUint8Array(base64) {//base64 is an byte Array sent from server-side

        var raw = atob(base64); //This is a native function that decodes a base64-encoded string.
        var uint8Array = new Uint8Array(new ArrayBuffer(raw.length));
        for (var i = 0; i < raw.length; i++) {
            uint8Array[i] = raw.charCodeAt(i);
        }
        return uint8Array;
    }

