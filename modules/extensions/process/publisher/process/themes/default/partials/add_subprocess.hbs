<div id="subprocessDiv" class="responsive-form-container" style="">

    <!--<div class="col-lg-2 col-md-2 col-sm-12 col-xs-12" style="padding:0">-->
        <!--&nbsp;-->
    <!--</div>-->
    <div style="border:0px solid #ff0000; padding:0"
         class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <div class="add-unbounded-row">
            <a data-name="subprocess" onclick="addUnboundedRow(this)"><i
                    class="fa fa-plus-circle"></i> Add
                Subprocess</a>
            <button class="btn btn-primary" id="search-process"
                    onclick="showSearchModal('subprocess')">
                <i class="fa fa-search"></i> Search Process
            </button>
        </div>
        <table class="tablex cu-data-table js-unbounded-table" id="table_subprocess">
            <thead>
            <tr>
                <th style="background: none;"></th>
            </tr>
            </thead>
        </table>
    </div>

    <div id="subProcessViewDiv" style="">
        <div class="row-fluid">
            <div class="span12">
                <input type="hidden" id="subProcessCountHolder" value="{{involveProcessList.subprocesses.length}}">
                <table class="table table-bordered" id="subProcessTable">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody id="listSubProcesses">
                    {{#each involveProcessList.subprocesses}}
                        <tr>
                            <td valign="top" style="width: 30%;"><span id="subprocess_Name"
                                                                       class="subprocess_Name">{{this.name}}-{{this.version}}</span></td>
                            <td style="width: 60%;"></td>
                            <td style="width: 10%;"><label class="view-process"><a target="_blank" href="../details/{{this.id}}" class="fa fa-eye" aria-hidden="true"></a></label><label class="remove-process" onclick="deleteSubprocess(this)"><i
                                    class="fa fa-trash"></i></label></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<table style="display: none;" class="refernceTableForUnbounded">
    <tbody>
    <tr id="table_reference_subprocess">
        <td valign="top"><input type="text" class="form-control subprocess_Name" value=""
                                name="subprocess_Name"
                                id="subprocess_Name" onkeydown="subProcessNamesAutoComplete()"></td>
        <td style="width: 5%;"><span class="glyphicon glyphicon-ok" style="color:#0081c2;cursor: pointer;"
                                     onclick="readUpdatedSubprocess(this, 1)"></span></td>
        <td><label data-name="subprocess" class="remove-process" onclick="deleteProcess(this)"><i
                class="fa fa-trash"></i></label></td>
    </tr>
    </tbody>
</table>

