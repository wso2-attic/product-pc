<div class="container-fluid">
    <div class="body-wrapper">
        <div class="row">
            <div class="wizard add-padding add-padding-top-2x">
                <div class="wizard-inner">
                    <ol class="wiz-nav-inner">
                        <li id="stp1" class="wiz-step current"><span
                                class="hidden-xs">Overview</span></li>
                        <li id="stp2" class="wiz-step"><span class="hidden-xs">Details</span>
                        </li>
                        <li id="stp3" class="wiz-step"><span
                                class="hidden-xs">Associations</span></li>
                    </ol>
                </div>
                <div class="wiz-content" style="box-shadow: 0px 2px 2px 2px rgba(0, 0, 0, 0.1);">
                    <div id="overviewDiv" style="display: none">{{> create_asset_overview .}}</div>
                    <div id="detailDiv" style="display: none">{{> create_asset_details .}}</div>
                    <div id="associationDiv" style="display: none">{{> create_asset_associations .}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
