<div id="successorDiv" class="responsive-form-container"
     style="">
    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12" style="padding:0">
        &nbsp;
    </div>
    <div style="border:0px solid #ff0000; padding:0"
         class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <div class="add-unbounded-row">
            <a data-name="successor" onclick="addUnboundedRow(this)"><i
                    class="fa fa-plus-circle"></i> Add
                Successor</a>
            <button class="btn btn-primary" id="search-process"
                    onclick="showSearchModal('successor')">
                <i class="fa fa-search"></i> Search Process
            </button>
        </div>
        <table class="tablex cu-data-table js-unbounded-table" id="table_successor">
            <thead>
            <tr>
                <th style="background: none;"></th>
            </tr>
            </thead>
        </table>
    </div>
</div>

<table style="display: none;" class="refernceTableForUnbounded">
    <tbody>
    <tr id="table_reference_successor">
        <td valign="top"><input type="text" class="form-control successor_Name" value=""
                                name="successor_Name"
                                id="successor_Name" onkeydown="successorNameAutoComplete()"></td>
        <td style="width: 5%;"><span class="glyphicon glyphicon-ok" style="color:#0081c2;cursor: pointer;"
                                     onclick="readUpdatedSuccessor(this, 1)"></span></td>
        <td><label data-name="successor" class="remove-process" onclick="deleteProcess(this)"><i
                class="fa fa-trash"></i></label></td>
    </tr>
    </tbody>
</table>
